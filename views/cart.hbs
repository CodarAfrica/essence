<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Essence - Fashion Ecommerce Template</title>

    <!-- Favicon  -->
    <link rel="icon" href="/img/core-img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/css/core-style.css">
    <link rel="stylesheet" href="/style.css">
    <style>
        .error {
            width: fit-content;
            padding: 1%;
            color: white;
            background-color: red;
            position: fixed;
            top: 1%;
            right: 0;
            border-radius: 5px;
            z-index: 999;
        }

        .messages {
            width: fit-content;
            padding: 1%;
            color: white;
            background-color: green;
            position: fixed;
            top: 1%;
            right: 0;
            border-radius: 5px;
            z-index: 999;
        }
        .action{
            color: red;
            transition: scale 0.5s ease;
        }
        
    </style>
</head>

<body>
    <!-- ##### Header Area Start ##### -->
    {{>header}}
    <div>
        <p class="error">{{error}}</p>
        <p class="messages">{{message}}</p>
    </div>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->
    {{>cart}}
    <!-- ##### Right Side Cart End ##### -->

    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb_area bg-img" style="background-image: url(img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Cart Page</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Shop Grid Area Start ##### -->
    <section class="shop_grid_area section-padding-80">
        <div class="container">
            <div class="row">

                <div class="col-12">
                    <div class="shop_grid_product_area">
                        <div class="row">
                            <div class="col-lg-7">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each carts}}
                                        <tr>
                                            <th scope="row">{{index}}</th>
                                            <td><img style="width: 30%; height:10vh;" src="{{productId.displayImage}}"
                                                    alt=""></td>
                                            <td>{{productId.name}}</td>
                                            <td>#{{productId.price}}</td>
                                            <td>{{quantity}}</td>
                                            <td><a href="/delete-cart/{{_id}}" class="action"><i class="fa-solid fa-trash"></i></a></td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                            <div class="col-lg-5">
                                <form action="" method="post"></form>
                            </div>
                        </div>

                        <div class="row">

                            <!-- Single Product -->
                            <div class="col-12 col-sm-6 col-lg-4">

                            </div>


                        </div>
                    </div>
                    <!-- Pagination -->
                    <nav aria-label="navigation">
                        <ul class="pagination mt-50 mb-70">
                            <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-left"></i></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">...</a></li>
                            <li class="page-item"><a class="page-link" href="#">21</a></li>
                            <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Shop Grid Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    {{>footer}}
    <!-- ##### Footer Area End ##### -->
    <script>
        const error = document.querySelector(".error")
        const message = document.querySelector(".messages")
        if (error.textContent.trim() === "") {
            error.style.display = "none"
        } else {
            error.style.display = "block"
            setTimeout(() => {
                error.style.display = "none"
            }, 2000)
        }
        if (message.textContent.trim() === "") {
            message.style.display = "none"
        } else {
            message.style.display = "block"
            setTimeout(() => {
                message.style.display = "none"
            }, 2000)
        }
    </script>
    <script src="https://kit.fontawesome.com/28f486642e.js" crossorigin="anonymous"></script>
    <!-- jQuery (Necessary for All JavaScript Plugins) -->
    <script src="/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="/js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="/js/active.js"></script>

</body>

</html>